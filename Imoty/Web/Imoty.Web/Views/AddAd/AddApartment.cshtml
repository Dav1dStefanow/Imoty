@using Imoty.Web.ViewModels.AddAd;
@model AddApartmentViewModel
@{
    this.ViewData["Title"] = "Add Apartment";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-primary border-bottom box-shadow mb-3">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="AddAd" asp-action="AddHouse">Add house</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="AddAd" asp-action="AddApartment">Add apartment</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="AddAd" asp-action="AddBusinesStore">Add office/store</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="AddAd" asp-action="AddField">Add field</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="AddAd" asp-action="AddWarehouse">Add warehouse</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Town"></label>
        <input asp-for="Town" class="form-control" />
        <span asp-validation-for="Town" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="District"></label>
        <input asp-for="District" class="form-control" />
        <span asp-validation-for="District" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Price"></label>
        <p>If your apartment is for rent, the price has to be below 10 000.</p>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="BedRooms"></label>
        <input asp-for="BedRooms" class="form-control" />
        <span asp-validation-for="BedRooms" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="BathRooms"></label>
        <input asp-for="BathRooms" class="form-control" />
        <span asp-validation-for="BathRooms" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="SquareMeters"></label>
        <input asp-for="SquareMeters" class="form-control" />
        <span asp-validation-for="SquareMeters" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="TotalFloors"></label>
        <input asp-for="TotalFloors" class="form-control" />
        <span asp-validation-for="TotalFloors" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Floor"></label>
        <input asp-for="Floor" class="form-control" />
        <span asp-validation-for="Floor" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Construction"></label>
        <input asp-for="Construction" class="form-control" />
        <span asp-validation-for="Construction" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Images"></label>
        <input asp-for="Images" class="form-control" />
        <span asp-validation-for="Images" class="text-center"></span>
    </div>

    <div id="TagsContainer">
        <label asp-for="Tags"></label>
        <a class="btn btn-success" onclick="AddMoreTags()">+</a>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="submit" class="btn btn-primary" />
</form>

@section Scripts{
    <script>
        var tagIndex = 0;
        function AddMoreTags() {
            console.log("AddMoreTags()");
            $("#TagsContainer").append("<div class='form-control '>Name <input type='text' name='Tags["+tagIndex+"].TagName' /></div>");
            tagIndex++;
        }
    </script>
}